-------------------- LOGIC ------------------

-- 1. AntiFling
local antiflingEnabled = false
local function setAntiFling(state)
    antiflingEnabled = state
    antiflingBtn.Text = "AntiFling : " .. (state and "เปิด" or "ปิด")
    antiflingCircle.BackgroundColor3 = state and statusColors.on or statusColors.off
end
antiflingBtn.MouseButton1Click:Connect(function()
    setAntiFling(not antiflingEnabled)
end)
spawn(function()
    while true do
        task.wait(0.2)
        if antiflingEnabled then
            local char = player.Character
            if char and char:FindFirstChild("HumanoidRootPart") then
                local hrp = char.HumanoidRootPart
                if math.abs(hrp.Velocity.X) > 120 or math.abs(hrp.Velocity.Y) > 120 or math.abs(hrp.Velocity.Z) > 120 then
                    hrp.Velocity = Vector3.new(0, 0, 0)
                end
                if math.abs(hrp.RotVelocity.X) > 50 or math.abs(hrp.RotVelocity.Y) > 50 or math.abs(hrp.RotVelocity.Z) > 50 then
                    hrp.RotVelocity = Vector3.new(0, 0, 0)
                end
            end
        end
    end
end)

-- 2. AutoTP
local autotpenabled = false
local teleporting = false
local autotpPos
local autoTP_HUMANOID = nil

local function setAutoTP(state)
    autotpenabled = state
    autotpswitch.Text = "AutoTP : " .. (state and "เปิด" or "ปิด")
    autotpcircle.BackgroundColor3 = state and statusColors.on or statusColors.off
end
autotpswitch.MouseButton1Click:Connect(function()
    setAutoTP(not autotpenabled)
end)
autosetBtn.MouseButton1Click:Connect(function()
    local char = player.Character
    if char and char:FindFirstChild("HumanoidRootPart") then
        autotpPos = char.HumanoidRootPart.Position
    end
end)

-- 3. Set Spawn
local spawnPos
spawnBtn.MouseButton1Click:Connect(function()
    local char = player.Character
    if char and char:FindFirstChild("HumanoidRootPart") then
        spawnPos = char.HumanoidRootPart.Position
        spawnCircle.BackgroundColor3 = statusColors.on
    end
end)
player.CharacterAdded:Connect(function(char)
    if spawnPos then
        local hrp = char:WaitForChild("HumanoidRootPart", 3)
        if hrp then hrp.CFrame = CFrame.new(spawnPos) end
    end
    -- Setup AutoTP ใหม่ทุกครั้งที่เกิด
    if autoTP_HUMANOID then
        pcall(function() autoTP_HUMANOID.HealthChanged:Disconnect() end)
    end
    autoTP_HUMANOID = char:FindFirstChildOfClass("Humanoid")
    if autoTP_HUMANOID then
        autoTP_HUMANOID.HealthChanged:Connect(function(health)
            if autotpenabled and autotpPos and health > 0 and (health / autoTP_HUMANOID.MaxHealth) <= 0.1 and not teleporting and autoTP_HUMANOID:GetState() ~= Enum.HumanoidStateType.Dead then
                teleporting = true
                local c = player.Character
                if c and c:FindFirstChild("HumanoidRootPart") then
                    c.HumanoidRootPart.CFrame = CFrame.new(autotpPos)
                end
                wait(0.5)
                teleporting = false
            end
        end)
    end
end)

-- 4. DiedTP (ไวและปุ่มกด)
local deathPos = nil
player.CharacterAdded:Connect(function(char)
    local hum = char:WaitForChild("Humanoid")
    local diedFlag = false
    hum.Died:Connect(function()
        diedFlag = true
    end)
    game:GetService("RunService").Stepped:Connect(function()
        if diedFlag and char and char:FindFirstChild("HumanoidRootPart") then
            deathPos = char.HumanoidRootPart.Position
            diedtpCircle.BackgroundColor3 = statusColors.on
            diedFlag = false
        end
    end)
end)
diedtpBtn.MouseButton1Click:Connect(function()
    local char = player.Character
    if deathPos and char and char:FindFirstChild("HumanoidRootPart") then
        char.HumanoidRootPart.CFrame = CFrame.new(deathPos)
    end
end)

-- 5. Antiidle (On/Off + เขียวแดง)
local antiidleEnabled = false
local antiidleConn = nil
local function setAntiIdle(state)
    antiidleEnabled = state
    antiidleBtn.Text = "Antiidle (" .. (state and "On" or "Off") .. ")"
    antiidleCircle.BackgroundColor3 = state and statusColors.on or statusColors.off
    if antiidleConn then
        pcall(function() antiidleConn:Disconnect() end)
        antiidleConn = nil
    end
    if state then
        local vu = game:GetService("VirtualUser")
        antiidleConn = player.Idled:Connect(function()
            vu:Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
            wait(1)
            vu:Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
        end)
    end
end
antiidleBtn.MouseButton1Click:Connect(function()
    setAntiIdle(not antiidleEnabled)
end)

-- 6. AutoClicker (เลือกจุด/เปิดปิด + แสดงพิกัด)
local autoclickerEnabled = false
local autoclickerPos = nil
local autoclickerConn = nil
local clickInterval = 0.25 -- วินาที

local function updateAutoClickerBtn()
    autoclickerBtn.Text = "AutoClicker : " .. (autoclickerEnabled and "เปิด" or "ปิด")
    autoclickerCircle.BackgroundColor3 = autoclickerEnabled and statusColors.on or statusColors.off
end

autoclickerBtn.MouseButton1Click:Connect(function()
    if autoclickerEnabled then
        autoclickerEnabled = false
        if autoclickerConn then
            pcall(function() autoclickerConn:Disconnect() end)
        end
        updateAutoClickerBtn()
        coordLabel.Visible = false
    else
        -- เริ่มเลือกจุด
        coordLabel.Text = "Click or press Esc to pick"
        coordLabel.Visible = true
        autoclickerBtn.Text = "AutoClicker : เลือกจุด..."
        autoclickerCircle.BackgroundColor3 = statusColors.off
        local pickConn, escConn
        pickConn = UserInputService.InputBegan:Connect(function(input, gp)
            if input.UserInputType == Enum.UserInputType.MouseButton1 then
                local mousePos = UserInputService:GetMouseLocation()
                autoclickerPos = Vector2.new(mousePos.X, mousePos.Y)
                coordLabel.Text = "X:"..math.floor(autoclickerPos.X).." Y:"..math.floor(autoclickerPos.Y)
                coordLabel.Visible = true
                autoclickerEnabled = true
                updateAutoClickerBtn()
                -- เริ่ม AutoClick loop
                autoclickerConn = game:GetService("RunService").RenderStepped:Connect(function(dt)
                    if autoclickerEnabled and autoclickerPos then
                        -- ซิมูเลตคลิกซ้ายที่จุด
                        -- หมายเหตุ: ใน Roblox Studio/Executor ส่วนใหญ่ไม่สามารถซิมูเลตคลิกนอก Roblox ได้จริง
                        -- ถ้า executor รองรับ: firemouseclick(0, autoclickerPos.X, autoclickerPos.Y)
                        -- ตัวอย่างใน Roblox เองจะข้าม (แต่แสดงตำแหน่ง)
                    end
                end)
                pickConn:Disconnect()
                if escConn then escConn:Disconnect() end
            elseif input.KeyCode == Enum.KeyCode.Escape then
                coordLabel.Visible = false
                autoclickerBtn.Text = "AutoClicker : ปิด"
                pickConn:Disconnect()
                if escConn then escConn:Disconnect() end
            end
        end)
        escConn = pickConn
    end
end)
